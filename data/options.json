{
    "$schema": "https://raw.githubusercontent.com/ManualForArchipelago/Manual/main/schemas/Manual.options.schema.json",
    "_comment": "Add a _ before an option name to comment it out and it wont be added to the apworld",
    "core": {
        "goal":{
            "_comment": [
                "Using 'goal' as the name of an option let you override some of the generated goal parameters"
            ],
            "display_name": "The End Objective",
            "description": "How to End your Randomized playthrough.",
            "aliases": {"easiest": 0},
            "hidden": false
        },
        "death_link": {
            "default": false
        },
        "filler_traps": {
            "_comment": "Using values here let you set a 'recommended' filler_trap percentage or even a default percentage",
            "values": {
                "recommended": 20
            }
        }
    },
    "user": {
        "_commented_out_option":{
            "type": "Toggle",
            "default": true
        },
        "include 6 stars":{
            "description": [
                "include or exclude all six stars from the randomizer",
                "if excluded (false), you can't play any 6 stars. in all the runs"
            ],
            "type": "Toggle",
            "default": true,
            "group": "characters options",
            "visibility": [
                "template",
                "simple_ui",
                "complex_ui",
                "spoiler"
            ]
        },
        "include 5 stars":{
            "description": [
                "include or exclude all five stars from the randomizer",
                "if excluded (false), you can't play any 5 stars. in all the runs"
            ],
            "type": "Toggle",
            "default": true,
            "group": "characters options",
            "visibility": [
                "template",
                "simple_ui",
                "complex_ui",
                "spoiler"
            ]
        },
        "exclude individual 6 stars": {
            "type": "Choice",
            "description": [
                "if include 6 star is true, choose which 6 star should not be included in the randomizer",
                "reasons for not inlcuding all the characters can be: ",
                "1. you don't have the character",
                "2. you don't want to play with him/her ever (to op, or just personal preference)"
            ],
            "values": {
                "exu": 0,
                "mytrle": 0
            },
            "aliases": {
                "you_know_that_purple_one": 1,
                "the_second_thing_bro": 2
            },
            "visibility": [
                "template",
                "simple_ui",
                "complex_ui"
            ]
        },
        "include ed1": {
            "type": "Toggle",
            "default": true,
            "description": ["all the itmes and stages for ending 1 will also be randomized"],
            "group": "Game Options",
            "visibility": [
                "template",
                "simple_ui",
                "spoiler"
            ]
        },
        "include ed2": {
            "type": "Toggle",
            "default": true,
            "description": ["all the itmes and stages for ending 2 will also be randomized"],
            "group": "Game Options",
            "visibility": [
                "template",
                "simple_ui",
                "spoiler"
            ]
        },
        "include ed3": {
            "type": "Toggle",
            "default": true,
            "description": ["all the itmes and stages for ending 3 will also be randomized"],
            "group": "Game Options",
            "visibility": [
                "template",
                "simple_ui",
                "spoiler"
            ]
        },
        "include ed4": {
            "type": "Toggle",
            "default": true,
            "description": ["all the itmes and stages for ending 4 will also be randomized"],
            "group": "Game Options",
            "visibility": [
                "template",
                "simple_ui",
                "spoiler"
            ]
        },
        "investment of ingots": {
            "description": [
                "how many ingots you need to invest to get a check"
            ],
            "type": "Range",
            "range_start": 1,
            "default": 10,
            "range_end": 50,
            "visibility": [
                "template",
                "simple_ui",
                "spoiler"
            ]
        },
        "get ingots from investment": {
            "description": [
                "how many ingots you need to get from the investment to get a check"
            ],
            "type": "Range",
            "range_start": 1,
            "default": 5,
            "range_end": 20,
            "visibility": [
                "template",
                "simple_ui",
                "spoiler"
            ]
        }, 

        "DLC_enabled":{
            "display_name": "DLC Enabled",
            "description": "Is the Dlc enabled?",
            "type": "Toggle",
            "visibility": [
                "simple_ui",
                "complex_ui",
                "template"
            ],
            "default": false,
            "_comment": [
                "there is no DLC, only different versions of itself",
                "when deleted, it still apears, so for now, it stays hidden"
            ],
            "hidden": true
        }
    }
}